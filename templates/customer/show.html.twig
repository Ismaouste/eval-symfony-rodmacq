{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ customer.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}" class="btn btn-primary">Retourner à la liste</a>
    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-success">Editer</a>
{{ include('customer/_delete_form.html.twig') }}
{% endblock %}
