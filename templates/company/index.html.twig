{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    <div>    <a href="{{ path('company_new') }}" class="btn btn-success">Create new</a>
</div></br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Siret</th>
                <th>Addresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.zipCode }}</td>
                <td>{{ company.city }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-secondary">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
